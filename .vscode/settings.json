// Place your settings in this file to overwrite default and user settings.
{
    // Unofficially, QMK uses spaces for indentation
    "editor.insertSpaces": true,
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.build": true,
        "**/*.hex": true,
        "**/*.bin": true,
        "**/*.uf2": true
    },
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.inc": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "xstddef": "c",
        "type_traits": "c",
        "utility": "c",
        "ranges": "c"
    },
    "[markdown]": {
        "editor.trimAutoWhitespace": false,
        "files.trimTrailingWhitespace": false
    },
    "python.formatting.provider": "yapf",
    "[json]": {
	    "editor.formatOnSave": false
    },
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#5bdbca",
        "activityBar.background": "#5bdbca",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#c448d7",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#15202b99",
        "sash.hoverBorder": "#5bdbca",
        "statusBar.background": "#31d2bc",
        "statusBar.foreground": "#15202b",
        "statusBarItem.hoverBackground": "#25ab98",
        "statusBarItem.remoteBackground": "#31d2bc",
        "statusBarItem.remoteForeground": "#15202b",
        "titleBar.activeBackground": "#31d2bc",
        "titleBar.activeForeground": "#15202b",
        "titleBar.inactiveBackground": "#31d2bc99",
        "titleBar.inactiveForeground": "#15202b99"
    },
    "peacock.color": "#31d2bc"
}
